<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Writer">
<ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:id="@+id/u"
    >
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/profilepic"
                android:id="@+id/profileImageView"
                />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:text="Writer Registration"
                android:gravity="center"
                android:textSize="40dp"
            />



    </LinearLayout>


</RelativeLayout>



    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Writer name"
            android:drawableLeft="@drawable/ic_user"
            android:gravity="center"
            android:textColorHint="@color/lite_black"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:paddingTop="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_btn_"
            android:layout_below="@id/u"
            android:id="@+id/edt_name" />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/lite_black"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:drawableLeft="@drawable/ic_email"
            android:paddingTop="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_btn_"
            android:layout_below="@id/edt_name"
            android:gravity="center"
            android:hint="Enter Writer EMail Address"
            android:id="@+id/edt_mail"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/lite_black"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:drawableLeft="@drawable/ic_phone"
            android:paddingTop="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_btn_"
            android:layout_below="@id/edt_mail"
            android:hint="Enter writer phone nUmbers"
            android:gravity="center"
            android:id="@+id/phone_number"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Choose Date of Birth"
            android:textColorHint="@color/lite_black"
            android:drawableLeft="@drawable/ic_calendar"
            android:gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:paddingTop="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_btn_"
            android:layout_below="@+id/phone_number"
            android:id="@+id/tvDate"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_home"
            android:gravity="center"
            android:layout_below="@+id/tvDate"
            android:textColorHint="@color/lite_black"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:paddingTop="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_btn_"
            android:hint="Enter Home Address"
            android:id="@+id/home_add"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_add"
            android:textColorHint="@color/lite_black"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:paddingTop="5dp"
            android:drawableLeft="@drawable/ic_capability"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_btn_"
            android:gravity="center"
            android:hint="Enter Writer's Capability"
            android:id="@+id/capability_perpage"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:hint="please enter terms and conditions"
            android:textColorHint="@color/lite_black"
          android:textSize="40dp"
            android:drawableLeft="@drawable/ic_terms_conditions"
            android:paddingTop="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_btn_"
            android:layout_below="@id/capability_perpage"
            android:id="@+id/terms_conditions"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Writer CNIC"
            android:textColorHint="@color/lite_black"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:drawableLeft="@drawable/ic_cnic"
            android:gravity="center"
            android:paddingTop="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_btn_"
            android:layout_below="@+id/terms_conditions"
            android:id="@+id/cnic"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textColorHint="@color/lite_black"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:paddingTop="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_btn_"
            android:id="@+id/qualification"
            android:layout_below="@+id/cnic"

            >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/choose_qualification"
                android:gravity="center"
                android:hint="choose Cpability"
                android:textColorHint="@color/colorAccent"/>
        <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/spinner_qualification"/>
    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/qualification"
            android:id="@+id/btns">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/capability"
                android:id="@+id/btn_save"
                android:text="Register" />
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_save"
                android:background="@drawable/round_btn_b"
                android:id="@+id/btn"
                android:text="confirm"/>

    </LinearLayout>

    </RelativeLayout>
</ScrollView>

</RelativeLayout>
